<div class="container d-flex justify-content-center py-5">
  <div class="row">
    <div class="col-12">
      <div class="bg-white rounded p-4 shadow">
        <h3>Create a new list</h3>
        <%= simple_form_for @list do |f| %>
          <%= f.input :name, placeholder: '...' %>
          <%= f.submit class: 'btn btn-flat border' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= link_to "Back to list", lists_path, class: "ms-4 text-decoration-none btn btn-success text-white fw-bold" %>
